{
  "name": "e-commerce",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start:dev": "nodemon server.js",
    "start:production": "NODE_ENV=production node server.js",
    "lint": "eslint \"{*.js,**/*.js}\"",
    "lint:fix": "eslint \"{*.js,**/*.js}\" --fix",
    "prettier:fix": "prettier --write \"{*.js,**/*.js}\"",
