  "author": "Sujan",
  "license": "ISC",
  "engines": {
    "node": ">=14.x"
  },
  "devDependencies": {
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "apidoc": "^0.27.1",
    "apollo-server": "^2.19.1",
    "apollo-server-express": "^2.19.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^4.0.1",
    "graphql-shield": "^7.4.4",
    "graphql-tools": "^7.0.2",
    "graphql-yoga": "^1.18.3",
    "lodash": "^4.17.21",
    "mongoose": "^5.11.9",
    "mongoose-seed": "^0.6.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "npm run prettier:fix"
    ]
  }
